function connection_require(int opid, expr cols[]) {
    use proof.std.connect.`id${opid}`;

    colsR = cols;

    if (provide == 1) {
        connection_update_require(opid, cols);
        connection_update_provide(opid, colsP);
    } else {
        connection_update_require(opid, cols);
    }
